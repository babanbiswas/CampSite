<% include ../partials/header %>
<div class="container">
	<div class="row">
		
	
	

		<h1 style="text-align: center;">
			Add a new Camp
		</h1>
		<div style="width:30%; margin:25 auto;">
			<form action="/campgrounds" method="POST">
			<div class="form-group">
				<input class="form-control" type="text"  name="name" placeholder="Enter your new camp name">
			</div>
			<div class="form-group">
				<input class="form-control" type="number"  name="price" placeholder="Enter price" min="0.01" step="0.01">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name ="image" placeholder="Enter new camp image address">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" name ="description" placeholder="Description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!!</button>
			</div>
			
			
			
			
		</form>
		<a href="/campgrounds">Back to Camps List</a>
		</div>
		
		
	</div>
</div>
<% include ../partials/footer %>